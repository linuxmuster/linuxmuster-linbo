#!/bin/bash

# Build QT embedded. This can be painful...

( QT_ARCHIVE=`grep qt- ../debian/md5sums.src | awk '{ print $2 }'`
  export QTDIR=`pwd`/`echo "$QT_ARCHIVE" | sed -e 's/.tar.gz//'`
  cd $QTDIR
  make clean
  echo -e "yes\n" | ./configure \
 -xplatform linux-g++-32 \
 -device-option CROSS_COMPILE=i386-linux-gnu- \
 -embedded x86 \
 -prefix $QTDIR \
 -opensource \
 -release \
 -static \
 -no-accessibility \
 -no-xmlpatterns \
 -no-phonon \
 -no-phonon-backend \
 -no-webkit \
 -no-exceptions \
 -no-svg \
 -no-scripttools \
 -no-nis \
 -no-cups \
 -no-stl \
 -verbose \
 -qt-zlib \
 -qt-libpng \
 -no-gif \
 -no-libjpeg \
 -no-openssl \
 -no-iconv \
 -no-dbus \
 -depths 4,8,16 \
 -no-largefile \
 -no-xinerama \
 -no-xrender \
 -no-freetype \
 -no-opengl \
 -no-glib \
 -nomake examples \
 -nomake demos \
 -no-libmng \
 -no-glib \
 -nomake examples \
 -nomake demos \
  )
( QT_ARCHIVE=`grep qt- ../debian/md5sums.src | awk '{ print $2 }'`
  export QTDIR=`pwd`/`echo "$QT_ARCHIVE" | sed -e 's/.tar.gz//'`
  cd $QTDIR
  make -j 2 )
